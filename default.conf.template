server {
    listen 80;
    server_name _;

    root /usr/share/nginx/html;
    index index.html;

    # CORS global
    add_header Access-Control-Allow-Origin "*" always;
    add_header Access-Control-Allow-Credentials "true" always;
    add_header Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS" always;
    add_header Access-Control-Allow-Headers "Content-Type, Authorization, Cookie" always;

    if ($request_method = OPTIONS) {
        return 204;
    }

    # Injection dynamique de env.js
    location /env.js {
        default_type application/javascript;
        return 200 '
            window._env_ = {
                BASE_URL: "${BASE_URL}",
                MAIN_URL: "${BASE_URL}/main",
                CHATGPT_URL: "${BASE_URL}/chatgpt/api",
                MESSAGE_URL: "${BASE_URL}/message/api"
            };
        ';
    }

    # --- Proxy backends ---
    location /main/ {
        rewrite ^/main/(.*)$ /$1 break;
        proxy_pass http://main:3000;
    }

    location /chatgpt/ {
        rewrite ^/chatgpt/(.*)$ /$1 break;
        proxy_pass http://chatgpt:3000;
    }

    # API Message
    location /chatgpt/api/ {
        rewrite ^/chatgpt/api/(.*)$ /$1 break;
        proxy_pass http://chatgpt:3000;
    }

    # Pages statiques Message
    location /message/ {
        root /usr/share/nginx/html;
        index index.html;
        try_files $uri $uri/ =404;
    }

    # API Message
    location /message/api/ {
        rewrite ^/message/api/(.*)$ /$1 break;
        proxy_pass http://message:3000;
    }


    # --- Fichiers statiques ---
    location / {
        try_files $uri $uri/ =404;
    }
}